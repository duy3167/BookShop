@{
	Layout = "_RequestLayout";
	ViewData["title"] = "Category";
}

@model IEnumerable<Category>

<div style="padding-top: 5rem">
    <table class="table table-hover" style="text-align:center">
        <thead>
            <tr>
                <th scope="col">No.</th>
                <th scope="col">Category name</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Category cate in Model)
            {
                <tr>
                    <th scope="row">@cate.cate_id</th>
                    <td>@cate.name</td>
                    <td>
                            <div class="btn-group" role="group">
                                <form asp-action="AcceptCate" asp-controller="Request" method="post">
                                    <input type="hidden" name="id" value="@cate.cate_id">
                                    <button class="btn btn-info">Accept</button>
                                </form>

                                <form asp-action="RejectCate" asp-controller="Request">
                                <input type="hidden" name="id" value="@cate.cate_id">
                                    <button class="btn btn-danger" ="@cate.cate_id">Reject</button>
                                </form>
                          </div>
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>